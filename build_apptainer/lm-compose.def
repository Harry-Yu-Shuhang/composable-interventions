Bootstrap: docker
From: nvidia/cuda:11.8.0-cudnn8-devel-ubuntu22.04

%labels
    Author Yushuhang
    Description Container for lm-compose with CUDA 11.8 + PyTorch 2.3 + GPTQ support

%files
    main.py /opt/app/
    main_quantize.py /opt/app/
    run_edit.py /opt/app/
    download.py /opt/app/
    pyproject.toml /opt/app/

    AutoGPTQ /opt/app/AutoGPTQ
    AutoAWQ /opt/app/AutoAWQ
    conf /opt/app/conf
    utils /opt/app/utils
    easyeditor /opt/app/easyeditor
    sparsellm /opt/app/sparsellm
    wmdp /opt/app/wmdp

    build_apptainer/install.sh /opt/app/install.sh

%environment
    export PYTORCH_CUDA_ALLOC_CONF=expandable_segments:True
    export TRANSFORMERS_CACHE=/opt/app/hf_cache
    export HF_HOME=/opt/app/hf_cache
    export CUDA_HOME=/usr/local/cuda
    export PATH=/opt/conda/bin:$PATH
    export LD_LIBRARY_PATH=/usr/local/cuda/lib64:$LD_LIBRARY_PATH
    export TORCH_CUDA_ARCH_LIST="7.5;8.0;8.6;8.9"
    export PYTHONPATH=/opt/app
    export CONDA_DEFAULT_ENV=lm-compose

%post
    SHELL=/bin/bash
    echo "üì¶ [1/4] ÂÆâË£ÖÁ≥ªÁªü‰æùËµñ..."
    apt-get update && apt-get install -y \
        git build-essential wget curl vim \
        ca-certificates libglib2.0-0 libsm6 libxrender1 libxext6 \
        libssl-dev libffi-dev libstdc++6 cmake ninja-build \
        && apt-get clean

    echo "üì¶ [2/4] ÂÆâË£Ö Miniconda..."
    wget https://repo.anaconda.com/miniconda/Miniconda3-latest-Linux-x86_64.sh -O miniconda.sh
    bash miniconda.sh -b -p /opt/conda && rm miniconda.sh
    export PATH=/opt/conda/bin:$PATH

    echo "üì¶ [3/4] ÂàõÂª∫ Conda ÁéØÂ¢É..."
    /opt/conda/bin/conda create -n lm-compose python=3.11 -y

    echo "üì¶ [4/4] ÂÆâË£Ö‰∏ªÈ°πÁõÆ..."
    chmod +x /opt/app/install.sh
    /opt/conda/bin/conda run -n lm-compose bash /opt/app/install.sh

%runscript
    . /opt/conda/etc/profile.d/conda.sh
    conda activate lm-compose
    exec "$@"
